{{ form_start(livraisonForm) }}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="mb-3 row">
                <div class="col-2">
                    {{ form_label(livraisonForm.numero) }}
                </div>
                <div class="col-10">
                    {{ form_widget(livraisonForm.numero, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>

            <div class="mb-3 row">
                <div class="col-2">
                    {{ form_label(livraisonForm.adresse) }}
                </div>
                <div class="col-10">
                    {{ form_widget(livraisonForm.adresse, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>

            <div class="mb-3 row">
                <div class="col-2">
                    {{ form_label(livraisonForm.ville) }}
                </div>
                <div class="col-4">
                    {{ form_widget(livraisonForm.ville, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <div class="col-2">
                    {{ form_label(livraisonForm.code_postal) }}
                </div>
                <div class="col-4">
                    {{ form_widget(livraisonForm.code_postal, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>

            <div class="mb-3 row">
                <div class="col-2">
                    {{ form_label(livraisonForm.client_nom) }}
                </div>
                <div class="col-4">
                    {{ form_widget(livraisonForm.client_nom, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <div class="col-2">
                    {{ form_label(livraisonForm.client_prenom) }}
                </div>
                <div class="col-4">
                    {{ form_widget(livraisonForm.client_prenom, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>

            <div class="mb-3 row">
                <div class="col-2">
                    {{ form_label(livraisonForm.client_email) }}
                </div>
                <div class="col-4">
                    {{ form_widget(livraisonForm.client_email, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <div class="col-2">
                    {{ form_label(livraisonForm.client_telephone) }}
                </div>
                <div class="col-4">
                    {{ form_widget(livraisonForm.client_telephone, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>

            <div class="mb-3 row">
                <div class="col-2">
                    {{ form_label(livraisonForm.date) }}
                </div>
                <div class="col-4">
                    {{ form_widget(livraisonForm.date, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <div class="col-2">
                    {{ form_label(livraisonForm.creneau, null, {'class': 'form-label'}) }}
                </div>
                <div class="col-4 d-flex align-items-center">
                    {% for choice in livraisonForm.creneau %}
                        <div class="form-check form-check-inline">
                            {{ form_widget(choice, { 'attr': {'class': 'form-check-input'} }) }}
                            {{ form_label(choice, null, { 'class': 'form-check-label' }) }}
                        </div>
                    {% endfor %}
                </div>
            </div>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-primary w-50">Cr√©er</button>
            </div>
        </div>
    </div>
</div>
{{ form_end(livraisonForm) }}