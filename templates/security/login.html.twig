{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
   <div class="container-fluid d-flex align-items-center justify-content-center vh-90">
        <div class="row w-100">
            <div class="col-md-6 d-flex flex-column align-items-center justify-content-center">
                <h1 class="h1 mb-3 text-center">Bienvenue sur PLANIFY !</h1>
                <img src="images/logo.png" alt="Logo" class="img-fluid">
            </div>
            <div class="col-md-6 d-flex justify-content-center">
                <form method="post" class="w-75">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    {% if app.user %}
                        <div class="mb-3">
                            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                        </div>
                    {% endif %}

                    <h3 class="h3 mb-3 font-weight-normal text-center">Veuillez vous authentifier :</h3>
                    <label class="mb-1" for="username">Email :</label>
                    <input type="email" class="form-control mb-3 rounded" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
                    
                    <label class="mb-1" for="password">Mot de passe :</label>
                    <input class="form-control mb-3 rounded" type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <div class="form-check my-3">
                        <input class="form-check-input" type="checkbox" name="_remember_me" id="_remember_me">
                        <label class="form-check-label" for="_remember_me">Se souvenir de moi</label>
                    </div>
                    <div class="d-flex justify-content-center">
                        <button class="btn btn-primary w-50" type="submit">
                            Sign in
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
